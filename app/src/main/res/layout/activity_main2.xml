<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    >

    <TextView
        android:id="@+id/yourname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/yourgithub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Github"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yourname"
        />

    <TextView
        android:id="@+id/yourphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Phone"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yourgithub"/>

    <TextView
        android:id="@+id/yourinsta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Instagram"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yourphone"/>


    <TextView
        android:id="@+id/yourtwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Twitter"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yourinsta"/>




    <Button
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:layout_marginBottom="32dp"
        />

</RelativeLayout>